# Server Configuration
PORT=3000
NODE_ENV=development

# Instagram
# The Instagram username to fetch posts from (default: bbcnews)
INSTAGRAM_USERNAME=bbcnews

# Instagram Scraping Configuration
# Number of retries when scraping fails (3-5 recommended)
INSTAGRAM_SCRAPING_RETRIES=3
# Delay between retries in milliseconds (1000-3000 recommended)
INSTAGRAM_RETRY_DELAY=1500
# Set to 'true' to use fallbacks only as absolute last resort
INSTAGRAM_STRICT_MODE=true

# LLM (OpenAI)
# Your OpenAI API key (required for summarization)
LLM_API_KEY=sk-your-openai-api-key
# Model to use for summarization (default: gpt-3.5-turbo)
LLM_MODEL=gpt-3.5-turbo
# Temperature for LLM responses (0.0-1.0, lower is more deterministic)
LLM_TEMPERATURE=0.7

# Twitter/X.com API
# API key from Twitter Developer Portal
TWITTER_API_KEY=your-twitter-api-key
# API secret from Twitter Developer Portal 
TWITTER_API_SECRET=your-twitter-api-secret
# Access token for your Twitter account
TWITTER_ACCESS_TOKEN=your-twitter-access-token
# Access token secret for your Twitter account
TWITTER_ACCESS_SECRET=your-twitter-access-secret
